[Unit]
Description=Varnish HTTP accelerator NCSA daemon
After=varnish.service

[Service]
Type=forking
PIDFile=/run/varnishncsa.pid

EnvironmentFile=/etc/sysconfig/varnishncsa

ExecStart=/usr/bin/varnishncsa -a -w /var/log/varnish/varnishncsa.log -D -P /run/varnishncsa.pid $DAEMON_OPTS 

[Install]
WantedBy=multi-user.target
